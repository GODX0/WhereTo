<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="384dp"
        android:id="@+id/imageView0"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="128dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/picbg"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="144dp"
        android:layout_height="80dp"
        android:id="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:src="@drawable/pic01"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:id="@+id/imageView2"
        android:src="@drawable/pic02"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="144dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:id="@+id/imageView3"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/pic03"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="144dp"
        android:layout_height="120dp"
        android:id="@+id/imageView4"
        android:src="@drawable/pic04"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="80dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:id="@+id/imageView5"
        android:src="@drawable/pic05"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="140dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:id="@+id/imageView6"
        android:src="@drawable/err404"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="160dp"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="164dp"
        android:layout_height="80dp"
        android:id="@+id/Button1"
        android:layout_marginTop="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_girl_selector"
        android:text="Со второй половинкой"
        android:textColor="@android:color/white"
        android:clickable="true"
        android:gravity="center_horizontal|bottom" />
    android:enabled="true" />

    <Button
        android:layout_width="164dp"
        android:layout_height="80dp"
        android:id="@+id/Button2"
        android:layout_marginTop="280dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_group_selector"
        android:text="С группой"

        android:textColor="@android:color/black"
        android:gravity="center_horizontal|bottom" />
    android:clickable="true" />

    <Button
        android:layout_width="164dp"
        android:layout_height="80dp"
        android:id="@+id/Button3"
        android:layout_marginTop="370dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        android:text="С семьей"
        android:background="@drawable/button_family_selector"
        android:clickable="true"
        android:singleLine="false"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center_horizontal|bottom" />

    <Button
        android:layout_width="164dp"
        android:layout_height="80dp"
        android:id="@+id/Button4"
        android:layout_marginTop="400dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_child_selector"
        android:textColor="@android:color/white"
        android:text="С ребенком"
        android:gravity="center_horizontal|bottom" />
    android:clickable="true" />
</RelativeLayout>